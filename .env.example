# Server Config
PORT=4000

# GitHub Personal Access Token
GITHUB_PAT=your-github-personal-access-token

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Qdrant
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_URL=https://your-qdrant-url:6333

# Redis (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379

# LangSmith (LangChain tracing)
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=your-langsmith-project-id

# Cohere
COHERE_API_KEY=your-cohere-api-key
COHERE_API_KEY_TRIAL=your-cohere-api-key-trial

# MongoDB
MONGO_URI=your-mongodb-uri

# Frontend/Backend URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000
FRONTEND_BASE_URL=http://your-ngrok-or-deployed-frontend-url

# GitHub Auth Endpoints
GITHUBAUTHREQ=http://localhost:4000/api/auth/github
GITHUBREPOS=http://localhost:4000/api/github/repos
GITHUBINDEX=http://localhost:4000/api/github/index
GITHUB_CALLBACK_URL=http://localhost:4000/api/auth/github/callback
AUTHCOMPLETE=http://localhost:4000/api/auth/complete
REDIRECT_URI=http://your-ngrok-or-deployed-backend-url/api/auth/callback

# GitHub OAuth App
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# GitHub App (for installations)
GITHUB_APP_CLIENT_ID=your-github-app-client-id
GITHUB_APP_CLIENT_SECRET=your-github-app-client-secret
GITHUB_APP_SLUG=your-github-app-slug
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY='-----BEGIN RSA PRIVATE KEY-----\n...your-private-key...\n-----END RSA PRIVATE KEY-----'

# JWT
JWT_SECRET=your-jwt-secret

# Ngrok Auth (optional)
NGROK_TOKEN=your-ngrok-token
